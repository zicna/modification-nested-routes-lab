<%= form_for @song  do |f| %>
  <% if !@song.artist %>
    <%= f.select song[:artist_id], options_for_collection_for_select(Author.all, :id, :name)%>
    <% else %>
      <%= f.hidden_field :artist_id  %>
  <% end %>
  <%= f.label :title %>
  <%= f.text_field :title %><br>
  <%= f.label :artist_name %>
  <%= f.text_field :artist_name %>
  <br />

  <%= f.submit %>
<% end %>
